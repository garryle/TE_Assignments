
@{
    ViewData["Title"] = "NewUser";
}

@model RegistrationViewModel

<h2>New User Registration</h2>


<form asp-controller="Users" asp-action="RegisterConfirmation" method="POST">

    <div>
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" />
    </div>

    <div>
        <label asp-for="Email">E-mail</label>
        <input asp-for="Email" />
    </div>

    <div>
        <label asp-for="ConfirmEmail">Confirm E-mail</label>
        <input asp-for="ConfirmEmail" />
    </div>

    <div>
        <label asp-for="Password">Password</label>
        <input asp-for="Password" />
    </div>

    <div>
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" />
    </div>

    <div>
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword " />
    </div>

    <div>
        <label asp-for="BirthDate">Birthday</label>
        <input asp-for="BirthDate" />
    </div>

    <div>
        <label asp-for="NumberOfTickets"># of Tickets</label>
        <input asp-for="NumberOfTickets" />
    </div>

    <button>Submit</button>

</form>