
@{
    ViewBag.Title = "Index";
}

@model LoginViewModel

<h2>Login</h2>


<form asp-controller="Users" asp-action="LoginConfirmation" method="POST">

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" />
    </div>

    <button>Submit</button>

</form>